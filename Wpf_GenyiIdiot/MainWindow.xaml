<Window x:Class="Wpf_GenyiIdiot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_GenyiIdiot"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="Гений-Идиот" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Гений или Идиот" FontSize="18" FontStyle="Normal" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top"/>
        <Button x:Name="playGameButton" Content="Новая игра" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Height="19" Width="151" Click="OnPlayGameButton_Click"/>
        <Button x:Name="resultsTableButton" Content="Таблица результатов" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Height="19" Width="151" Click="OnResultsTableButton_Click"/>
        <Button x:Name="settingsButton" Content="Настройки" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="19" Width="151" Click="OnSettingsButton_Click"/>
        <Button x:Name="exitButton" Content="Выход" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Height="19" Width="151" Click="OnExitButton_Click"/>

    </Grid>
</Window>
