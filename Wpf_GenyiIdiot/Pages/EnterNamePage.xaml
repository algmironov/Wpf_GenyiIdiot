<Window x:Class="Wpf_GenyiIdiot.Pages.EnterNamePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_GenyiIdiot.Pages"
        mc:Ignorable="d"
        Title="Введите имя" MinHeight="300" MinWidth="400" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Введите имя:" Margin="10" FontSize="18"/>
        <TextBox x:Name="inputTextBox" Grid.Row="0" Focusable="True" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" MinWidth="300" Height="35" FontSize="18"/>
        <Button x:Name="saveNameButton" Content="Сохранить" Click="OnSaveButtonClick" FontSize="15" Grid.Row="1" Margin="0,20" Height="35" Width="250" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button x:Name="dontSanveButton" Content="Не сохранять" Click="OnDontSaveButtonClick" FontSize="15" Grid.Row="1" Margin="0,10,0,20" Height="35" Width="250" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
